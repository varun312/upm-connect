<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Apply for Document</title>
    <link rel="stylesheet" href="css/globals.css" />
    <link rel="stylesheet" href="css/application-form.css" />
  </head>
  <body>
    <!-- <%- include('partials/header') %> -->
    <div class="container">
      <!-- Main Content -->
      <main class="main-content">
        <div class="form-container">
          <h1 class="form-title">Apply for Document</h1>
          <form action="/application-form" method="POST" class="login-form">
            <div class="form-group">
              <label for="pingId">Ping ID</label>
              <input
                type="text"
                id="pingId"
                name="pingId"
                class="form-input"
                required
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-input"
                required
              />
            </div>
            <div class="form-group">
              <label for="category">Category</label>
              <select id="category" name="category" class="form-input" required>
                <option value="License">License</option>
                <option value="Passport">Passport</option>
                <option value="Voter ID">Voter ID</option>
                <option value="Aadhaar">Aadhaar</option>
                <option value="PAN">PAN</option>
              </select>
            </div>
            <div class="form-actions">
              <button type="submit" class="btn-primary">
                Submit Application
              </button>
            </div>
          </form>
        </div>
      </main>
    </div>
  </body>
</html>
