<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - UPM</title>
    <link rel="stylesheet" href="css/globals.css" />
    <link rel="stylesheet" href="css/register.css" />
  </head>
  <body>
    <div class="container">
      <!-- Header -->
      <%- include('partials/header') %>

      <!-- Main Content -->
      <main class="main-content">
        <!-- Form Container -->
        <div class="form-container">
          <h1 class="form-title">Register</h1>

          <form
            class="login-form"
            action="/register"
            method="POST"
            enctype="multipart/form-data"
          >
            <!-- First Name -->
            <div class="form-group">
              <label for="first-name">First Name</label>
              <input
                type="text"
                id="first-name"
                name="first-name"
                class="form-input"
                placeholder="Enter your first name"
              />
            </div>

            <!-- Last Name -->
            <div class="form-group">
              <label for="last-name">Last Name</label>
              <input
                type="text"
                id="last-name"
                name="last-name"
                class="form-input"
                placeholder="Enter your last name"
              />
            </div>

            <!-- Date of Birth -->
            <div class="form-group">
              <label for="dob">Date of Birth</label>
              <input type="date" id="dob" name="dob" class="form-input" />
            </div>

            <!-- Gender -->
            <div class="form-group">
              <label for="gender">Gender</label>
              <select id="gender" name="gender" class="form-input">
                <option value="">Select gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
              </select>
            </div>

            <!-- Address -->
            <div class="form-group">
              <label for="adres">Address</label>
              <input
                type="text"
                id="adres"
                name="adres"
                class="form-input"
                placeholder="Enter your address"
              />
            </div>

            <!-- Proof of Residence -->
            <div class="form-group">
              <label for="proof-residence">Proof of Residence</label>
              <select
                id="proof-residence-type"
                name="proof-residence-type"
                class="form-input"
                style="width: auto; display: inline-block; margin-left: 8px"
              >
                <option value="voter-card">Voter Card</option>
              </select>

              <input
                type="file"
                id="proof-residence"
                name="proof-residence"
                class="form-input"
                accept=".pdf,.jpg,.jpeg,.png"
              />
            </div>

            <!-- Proof of Identity -->
            <div class="form-group">
              <label for="proof-identity">Proof of Identity</label>
              <select
                id="proof-identity-type"
                name="proof-identity-type"
                class="form-input"
                style="width: auto; display: inline-block; margin-left: 8px"
              >
                <option value="passport">Passport</option>
              </select>
              <input
                type="file"
                id="proof-identity"
                name="proof-identity"
                class="form-input"
                accept=".pdf,.jpg,.jpeg,.png"
              />
            </div>

            <!-- Action Buttons -->
            <div class="form-actions">
              <button type="submit" class="btn-primary">SUBMIT</button>
            </div>
          </form>
        </div>
      </main>
    </div>
  </body>
</html>
