        </nav>
        <div class="header-right">
          <img src="assets/header-end-icon.svg" alt="Header Icon" />
        </div>
      </header>
      <!-- Main Content -->
      <main class="main-content">
        <!-- Service Cards Row -->
        <div class="service-cards-container">
          <div class="service-card">
            <div class="card-header">
