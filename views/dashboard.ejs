<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UPM Dashboard</title>
    <link rel="stylesheet" href="css/newpg.css" />
    <link rel="stylesheet" href="css/globals.css" />
  </head>
  <body>
    <div class="container">
      <!-- Header -->
      <header class="header">
        <div class="header-left">
          <div class="logo">
            <img src="assets/logo.svg" alt="UPM Logo" />
            <span>UPM</span>
          </div>
        </div>
        <nav class="nav" id="nav">
          <a href="#" class="nav-link active">Home</a>
          <a href="#" class="nav-link">About</a>
          <a href="#" class="nav-link">Features</a>
          <a href="#" class="nav-link">Contact</a>
        </nav>
        <div class="header-right">
          <img src="assets/header-end-icon.svg" alt="Header Icon" />
        </div>
      </header>
      <!-- Main Content -->
      <main class="main-content">
        <!-- Service Cards Row -->
        <div class="service-cards-container">
          <div class="service-card">
            <div class="card-header">
              <div class="card-icon">
                <img src="/assets/card1-icon.svg" />
              </div>
              <h3>Core Services</h3>
            </div>
            <div class="card-content">
              <div class="service-item">
                <span class="service-icon">ğŸ“‹</span>
                <span>Apply for permits</span>
              </div>
              <div class="service-item">
                <span class="service-icon">ğŸ </span>
                <span>Property Records</span>
              </div>
              <div class="service-item">
                <span class="service-icon">ğŸš—</span>
                <span>Vehicle Registration</span>
              </div>
              <div class="service-item">
                <span class="service-icon">ğŸ’°</span>
                <span>Pay taxes online</span>
              </div>
            </div>
          </div>

          <div class="service-card">
            <div class="card-header">
              <div class="card-icon">
                <img src="/assets/card1-icon.svg" />
              </div>
              <h3>Transparency Hub</h3>
            </div>
            <div class="card-content">
              <div class="service-item">
                <span class="service-icon">ğŸ“Š</span>
                <span>Open spending tracker</span>
              </div>
              <div class="service-item">
                <span class="service-icon">ğŸ“</span>
                <span>Meeting minutes</span>
              </div>
              <div class="service-item">
                <span class="service-icon">ğŸ—³ï¸</span>
                <span>Election results</span>
              </div>
              <div class="service-item">
                <span class="service-icon">ğŸ“ˆ</span>
                <span>City statistics</span>
              </div>
            </div>
          </div>

          <div class="service-card">
            <div class="card-header">
              <div class="card-icon">
                <img src="/assets/card1-icon.svg" />
              </div>
              <h3>Get Involved</h3>
            </div>
            <div class="card-content">
              <div class="service-item">
                <span class="service-icon">ğŸ‘¥</span>
                <span>Pre/Post volunteer</span>
              </div>
              <div class="service-item">
                <span class="service-icon">ğŸ’¬</span>
                <span>Town hall forum</span>
              </div>
              <div class="service-item">
                <span class="service-icon">ğŸ“</span>
                <span>Submit feedback</span>
              </div>
              <div class="service-item">
                <span class="service-icon">ğŸ“±</span>
                <span>Contact officials</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Dashboard Cards Row -->
        <div class="dashboard-cards-container">
          <div class="dashboard-card application-tracker">
            <h3>Application Tracker</h3>
            <div class="tracker-content">
              <div class="tracker-item">
                <span class="tracker-label">Driving License</span>
                <span class="progress-text">In Progress</span>
                <div class="progress-bar">
                  <div class="progress-fill" style="width: 60%"></div>
                </div>
              </div>
              <div class="tracker-item">
                <span class="tracker-label">Land Record</span>
                <span class="progress-text">In Progress</span>
                <div class="progress-bar">
                  <div class="progress-fill" style="width: 80%"></div>
                </div>
              </div>
              <div class="tracker-item">
                <span class="tracker-label">Property Deed</span>
                <span class="progress-text">Completed</span>
                <div class="progress-bar">
                  <div
                    class="progress-fill completed"
                    style="width: 100%"
                  ></div>
                </div>
              </div>
            </div>
          </div>

          <div id="digital-vault">
            <h3>Digital Vault</h3>
            <div class="vault-content">
              <% if (vaultDocs && vaultDocs.length > 0) { %>
                <% vaultDocs.forEach(function(doc) { %>
                  <div class="vault-item">
                    <span class="vault-label"><%= doc.docType ? doc.docType : 'Document' %></span>
                    <% if (doc.verified) { %>
                      <span class="vault-status verified">VERIFIED</span>
                    <% } else { %>
                      <span class="vault-status unverified">UNVERIFIED</span>
                    <% } %>
                    <a href="/<%= doc.filePath %>" target="_blank" class="vault-download">View</a>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="vault-item">
                  <span class="vault-label">No documents uploaded yet.</span>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>