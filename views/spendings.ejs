<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Spending Ledger - UPM</title>
    <link rel="stylesheet" href="css/globals.css" />
    <link rel="stylesheet" href="css/spending.css" />
  </head>
  <body>
    <div class="container">
      <!-- Header -->
      <%- include('partials/header') %>

      <!-- Main Content -->
      <main class="main-content">
        <!-- Page Header -->
        <div class="page-header">
          <h1 class="page-title">
            Spending Ledger

            <span>History</span>
          </h1>
        </div>

        <!-- Table Section -->
        <div class="table-section">
          <h2 class="table-title">
            OPEN SPENDING LEDGER -- RECENT TRANSACTIONS
          </h2>

          <div class="table-container">
            <table class="spending-table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Department</th>
                  <th>Description</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (spendings && spendings.length > 0) { %> <%
                spendings.forEach(function(spending) { %>
                <tr>
                  <td>
                    <%= spending.date ? spending.date.toISOString().slice(0,10)
                    : '' %>
                  </td>
                  <td><%= spending.department %></td>
                  <td><%= spending.description %></td>
                  <td>
                    $<%= spending.amount ? spending.amount.toLocaleString() : ''
                    %>
                  </td>
                  <td>
                    <span
                      class="status <%= spending.status ? spending.status.toLowerCase() : '' %>"
                      ><%= spending.status %></span
                    >
                  </td>
                  <td>
                    <button class="edit-btn" data-id="<%= spending._id %>">
                      Raise in Meeting
                    </button>
                  </td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                  <td colspan="5" style="text-align: center; color: #888">
                    No transactions found.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Refresh Button -->
          <div class="button-container">
            <button class="refresh-btn">REFRESH</button>
          </div>
        </div>
      </main>
    </div>
    <!-- Modal Overlay and Dialog -->
    <div id="modalOverlay" class="modal-overlay"></div>
    <div id="confirmModal" class="modal-dialog">
      <div class="modal-content">
        <h3>Are you sure?</h3>
        <div class="modal-actions">
          <a href="/townhall" id="modalYes" class="modal-btn yes-btn">
            View Townhall
          </a>
          <a href="#" id="modalNo" class="modal-btn no-btn">Continue</a>
        </div>
      </div>
    </div>
    <div id="raiseDialogContainer" style="display: none">
      <%- include('partials/rais-in-meeting') %>
    </div>
    <style>
      .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(24, 25, 34, 0.35);
        z-index: 2000;
        display: none;
      }
      .modal-dialog {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #fff1e6;
        border: 2px solid #a5a58d;
        box-shadow: 0 8px 32px rgba(24, 25, 34, 0.18);
        z-index: 2100;
        min-width: 320px;
        border-radius: 8px;
        animation: fadeIn 0.2s;
        display: none;
        flex-direction: column;
        align-items: center;
      }
      .modal-overlay.active,
      .modal-dialog.active {
        display: block;
      }
      .modal-content {
        padding: 32px 32px 24px 32px;
        text-align: center;
      }
      .modal-actions {
        margin-top: 18px;
        display: flex;
        gap: 18px;
        justify-content: center;
      }
      .modal-btn {
        padding: 10px 28px;
        font-size: 1rem;
        font-family: "IBM Plex Sans", "PPTelegraf", sans-serif;
        font-weight: bold;
        text-transform: uppercase;
        border: none;
        border-radius: 0;
        cursor: pointer;
        box-shadow: 2px 2px 0 #181922;
        letter-spacing: 1px;
        transition: background 0.2s, color 0.2s;
      }
      .yes-btn {
        background: #3cb371;
        color: #fff;
      }
      .yes-btn:hover {
        background: #2e8b57;
      }
      .no-btn {
        background: #e63946;
        color: #fff;
      }
      .no-btn:hover {
        background: #b71c1c;
      }
      .edit-btn {
        background: #fff1e6;
        color: #6b7b9a;
        border: 2px solid #6b7b9a;
        font-family: "IBM Plex Sans", "PPTelegraf", sans-serif;
        font-size: 1rem;
        font-weight: bold;
        text-transform: uppercase;
        padding: 7px 18px;
        margin: 2px 0;
        cursor: pointer;
        box-shadow: 2px 2px 0 #181922;
        outline: none;
        border-radius: 0;
        letter-spacing: 1px;
        transition: background 0.2s, color 0.2s;
      }
      .edit-btn:hover {
        background: #6b7b9a;
        color: #fff;
      }
    </style>

    <script>
      // Minimal JS, mostly CSS-driven modal
      const modalOverlay = document.getElementById("modalOverlay");
      const confirmModal = document.getElementById("confirmModal");
      let currentSpendingId = null;
      document.querySelectorAll(".edit-btn").forEach((btn) => {
        btn.addEventListener("click", function (e) {
          e.preventDefault();
          currentSpendingId = this.getAttribute("data-id");
          modalOverlay.classList.add("active");
          confirmModal.classList.add("active");
        });
      });
      document.getElementById("modalNo").onclick = function (e) {
        e.preventDefault();
        modalOverlay.classList.remove("active");
        confirmModal.classList.remove("active");
        // Show raise-in-meeting dialog and overlay
        document.querySelector(".custom-dialog-overlay").style.display =
          "block";
        document.querySelector(".custom-dialog").style.display = "flex";
        document.getElementById("raiseDialogContainer").style.display = "block";
        // Set the spending ID in the hidden input
        document.getElementById("raiseSpendingId").value = currentSpendingId;
        // currentSpendingId = null; // keep if you want to clear after submit
      };
      document.getElementById("modalYes").onclick = function () {
        // TODO: Add your action here, e.g., send AJAX or form submit
        modalOverlay.classList.remove("active");
        confirmModal.classList.remove("active");
        currentSpendingId = null;
      };
      modalOverlay.onclick = function () {
        modalOverlay.classList.remove("active");
        confirmModal.classList.remove("active");
        currentSpendingId = null;
      };
    </script>
  </body>
</html>
