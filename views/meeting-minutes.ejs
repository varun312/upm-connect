<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meeting Minutes - UPM</title>
    <link rel="stylesheet" href="/css/globals.css" />
    <link rel="stylesheet" href="/css/meeting.css" />
  </head>
  <body>
    <div class="container">
      <!-- Main Content -->
      <main class="main-content">
        <!-- Page Header -->
        <div class="page-header">
          <div class="header-icon">ðŸ‘¥</div>
          <h1 class="page-title">Recent Meetings</h1>
        </div>

        <!-- Meeting Cards Grid -->
        <div class="meeting-grid">
          <!-- Row 1 -->
          <% meetings.forEach(meeting => { %>
          <div class="meeting-card">
            <div class="card-content">
              <div class="agenda-item">
                <strong>Agenda:</strong>
                <span class="agenda-link"><%= meeting.agenda %></span>
              </div>
              <div class="summary-item">
                <strong>Summary:</strong> <%= meeting.summary %>
              </div>
              <div class="date-item">
                <strong>Date:</strong> <%= meeting.date.toLocaleDateString() %>
              </div>
            </div>
            <a
              class="view-minutes-btn"
              href="/meeting-minutes/<%= meeting._id %>"
              >View Minutes</a
            >
          </div>
          <% }); %>
        </div>
      </main>
    </div>
  </body>
</html>
